{
  "info": {
    "name": "Multi-Tenant E-Commerce (Render)",
    "_postman_id": "multi-tenant-ecom-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "https://multi-tenant-e-commerce-platform.onrender.com" },
    { "key": "token", "value": "" },
    { "key": "vendor_id", "value": "1" }
  ],
  "item": [
    {
      "name": "Auth / Register Admin",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin1\",\n  \"password\": \"adminpass123\",\n  \"role\": \"admin\",\n  \"email\": \"admin@example.com\"\n}"
        },
        "url": "{{base_url}}/auth/register/"
      }
    },
    {
      "name": "Auth / Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin1\",\n  \"password\": \"adminpass123\"\n}"
        },
        "url": "{{base_url}}/auth/login/"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let json = pm.response.json();",
              "if (json.access) { pm.collectionVariables.set('token', json.access); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Vendors / Create (admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Vendor A\",\n  \"contact_email\": \"owner@vendor-a.com\",\n  \"domain\": \"vendor-a.example\"\n}"
        },
        "url": "{{base_url}}/vendors/"
      }
    },
    {
      "name": "Register Owner",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"owner1\",\n  \"password\": \"ownerpass\",\n  \"role\": \"owner\",\n  \"email\": \"owner@vendor-a.com\",\n  \"vendor_id\": {{vendor_id}}\n}"
        },
        "url": "{{base_url}}/auth/register/"
      }
    },
    {
      "name": "Register Staff",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"staff1\",\n  \"password\": \"staffpass\",\n  \"role\": \"staff\",\n  \"email\": \"staff@vendor-a.com\",\n  \"vendor_id\": {{vendor_id}}\n}"
        },
        "url": "{{base_url}}/auth/register/"
      }
    },
    {
      "name": "Register Customer",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"customer1\",\n  \"password\": \"custpass\",\n  \"role\": \"customer\",\n  \"email\": \"cust@vendor-a.com\",\n  \"vendor_id\": {{vendor_id}},\n  \"name\": \"Customer One\"\n}"
        },
        "url": "{{base_url}}/auth/register/"
      }
    },
    {
      "name": "Owner Login (replace body with owner creds)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"username\": \"owner1\", \"password\": \"ownerpass\" }" },
        "url": "{{base_url}}/auth/login/"
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": ["let json = pm.response.json(); if (json.access) pm.collectionVariables.set('token', json.access);"] }
        }
      ]
    },
    {
      "name": "Create Product (owner)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"T-Shirt\",\n  \"description\": \"Comfort tee\",\n  \"price\": \"299.00\",\n  \"quantity\": 50,\n  \"assigned_to\": 3\n}"
        },
        "url": "{{base_url}}/products/"
      }
    },
    {
      "name": "Staff Login (replace body with staff creds)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"username\": \"staff1\", \"password\": \"staffpass\" }" },
        "url": "{{base_url}}/auth/login/"
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": ["let json = pm.response.json(); if (json.access) pm.collectionVariables.set('token', json.access);"] }
        }
      ]
    },
    {
      "name": "Staff: List Products (assigned)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{base_url}}/products/"
      }
    },
    {
      "name": "Customer Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"username\": \"customer1\", \"password\": \"custpass\" }" },
        "url": "{{base_url}}/auth/login/"
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": ["let json = pm.response.json(); if (json.access) pm.collectionVariables.set('token', json.access);"] }
        }
      ]
    },
    {
      "name": "Place Order (customer)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{ \"items\": [{ \"product\": 1, \"qty\": 2 }] }" },
        "url": "{{base_url}}/orders/place/"
      }
    },
    {
      "name": "Customer: List Orders",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{base_url}}/orders/"
      }
    },
    {
      "name": "Owner: List Orders",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{base_url}}/orders/"
      }
    }
  ]
}
